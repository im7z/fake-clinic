<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Available Appointments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <%- include('../partials/_navbarr', { page: 'add-block' }) %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3>Available Appointment Slots</h3>
      <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addModal">
        âž• Add Slot
      </button>
    </div>

    <div class="mb-3">
      <select id="doctorFilter" class="form-select w-auto">
        <option value="">All Doctors</option>
      </select>
    </div>

    <table class="table table-striped" id="availableTable">
      <thead>
        <tr>
          <th>Doctor</th>
          <th>Date</th>
          <th>Time</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>

 <!-- Modal: Add Appointment Block -->
<div class="modal fade" id="addModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-3">
      <h5>Add Appointment Block</h5>
      <form id="addForm" class="mt-3">
        <div class="mb-2">
          <label>Doctor Name</label>
          <input type="text" id="doctorName" class="form-control" required>
        </div>

        <div class="row">
          <div class="col-md-6 mb-2">
            <label>Start Date</label>
            <input type="date" id="startDate" class="form-control" required>
          </div>
          <div class="col-md-6 mb-2">
            <label>End Date</label>
            <input type="date" id="endDate" class="form-control">
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-2">
            <label>Start Time</label>
            <input type="time" id="startTime" class="form-control" required>
          </div>
          <div class="col-md-6 mb-2">
            <label>End Time</label>
            <input type="time" id="endTime" class="form-control">
          </div>
        </div>

        <div class="mb-3">
          <label>Interval (minutes)</label>
          <input type="number" id="intervalMinutes" class="form-control" placeholder="e.g. 30">
        </div>

        <button class="btn btn-primary w-100 mt-2" type="submit">Add Block</button>
      </form>
    </div>
  </div>
</div>

  <script>const API = "<%= API %>";</script>
  <script src="/js/admin.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


