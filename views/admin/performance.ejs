<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Performance Overview</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/user.css">
</head>

<body class="bg-light">

    <%- include('../partials/_navbarr', { page: 'performance' }) %>

        <div class="container mt-4">

            <h2 class="mb-4 text-center">ðŸ“Š System Performance</h2>

            <!-- ============================
          SUMMARY CARDS
    ============================= -->
            <div class="row text-center mb-4" id="summaryRow">
                <div class="col-md-3">
                    <div class="card p-3 shadow-sm">
                        <h5>Available Slots</h5>
                        <h3 id="availableCount">0</h3>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card p-3 shadow-sm">
                        <h5>Booked Slots</h5>
                        <h3 id="bookedCount">0</h3>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card p-3 shadow-sm">
                        <h5>Total Users</h5>
                        <h3 id="userCount">0</h3>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card p-3 shadow-sm">
                        <h5>User Categories</h5>
                        <div>
                            <span class="badge bg-success" id="vgCount">0 Very Good</span><br>
                            <span class="badge bg-primary mt-1" id="gCount">0 Good</span><br>
                            <span class="badge bg-danger mt-1" id="arCount">0 At-Risk</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ============================
          FILTERS & SEARCH
    ============================= -->
            <div class="d-flex justify-content-between align-items-center mb-3">

                <input type="text" id="userSearch" class="form-control w-50" placeholder="Search by username...">

                <div class="btn-group">
                    <button class="btn btn-secondary btn-sm filterBtn active" data-filter="all">All</button>
                    <button class="btn btn-success btn-sm filterBtn" data-filter="Very Good">Very Good</button>
                    <button class="btn btn-primary btn-sm filterBtn" data-filter="Good">Good</button>
                    <button class="btn btn-danger btn-sm filterBtn" data-filter="At-Risk">At-Risk</button>
                </div>
            </div>


            <!-- ============================
          USERS TABLE
    ============================= -->
            <div class="card shadow-sm p-3">
                <h5 class="mb-3">Users Performance</h5>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Phone</th>
                            <th>Attendance</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody id="usersTable"></tbody>
                </table>
            </div>

        </div>

        <!-- ============================
        CATEGORY CHANGE MODAL
  ============================= -->
        <div class="modal fade" id="categoryModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content p-3">

                    <h5>Change User Category</h5>
                    <p id="catUser" class="text-muted"></p>

                    <select id="newCategory" class="form-select mt-2">
                        <option value="Very Good">Very Good</option>
                        <option value="Good">Good</option>
                        <option value="At-Risk">At-Risk</option>
                    </select>

                    <button class="btn btn-success mt-3 w-100" onclick="saveCategory()">Save Changes</button>

                </div>
            </div>
        </div>

        <script>const API = "<%= API %>";</script>
        <script src="/js/admin.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


        
</body>

</html>